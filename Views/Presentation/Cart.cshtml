                    <td class="price">Price</td>
                    <td>Quantity</td>
                    <td class="quantity">Action</td>
                    <td class="total">Total</td>
                    <td></td>+
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="cart_product">
                            <a href=""><img src="images/cart/one.png" alt=""></a>
                        </td>
                        <td class="cart_description">
                            <h4><a href="">@item.OrdPrID</a></h4>
                            <p>Product ID: @item.OrdPrID</p>
                        </td>
                        <td class="cart_price">
                            <p>@item.OrdPkgUP</p>
                        </td>
                        <td class="cart_quantity">
                            <div class="cart_quantity_button">
                                @*<a class="cart_quantity_up buttons" onclick="AddOne()"> + </a>*@
                                @*<input type="number" onchange="CalTot()" class="cart_quantity_input" value="@item.OrdPrQty" autocomplete="off" size="2">*@
                                @*<input asp-for="@item.OrdPrQty" onchange="ChangeQty()" />*@
                                @*<a class="cart_quantity_down" onclick="AddOne()"> - </a>*@
                                    <a href="@Url.Action("AddOneToCart","Presentation",new { OrderRefID = item.OrderRefID, OrderQty = item.OrdPrQty})" >+</a>
                                <input asp-for="@item.OrdPrQty" />

                                    <button type="submit" id="btnSub">-</button>

                                    @*<button type="button" onclick="proceed()" id="@item.OrderRefID" >Update</button>*@
                            </div>
                        </td>
                        <td class="cart_total">
                            @*<form action="/" method="post">*@
                            @*<button type="submit" href="@Url.Action("AddToCart","Presentation",new { OrderRefID = item.OrderRefID, OrderQty = item.OrdPrQty})">Update</button>*@
                            @*</form>*@

                        </td>
                        <td class="cart_total">
                            <p class="cart_total_price">@item.OrdPrAmnt</p>
                        </td>
                        <td class="cart_delete">
                            <a class="cart_quantity_delete" href=""><i class="fa fa-times"></i></a>
                        </td>
                    </tr>
                }
                <tr>
                    <td colspan="4">&nbsp;</td>
                    <td colspan="2">
                        <table class="table table-condensed total-result">
                            <tr>
                                <td>Cart Sub Total</td>
                                <td>$59</td>
                            </tr>
                            <tr>
                                <td>Exo Tax</td>
                                <td>$2</td>
                            </tr>
                            <tr class="shipping-cost">
                                <td>Shipping Cost</td>
                                <td>Free</td>
                            </tr>
                            <tr>
                                <td>Total</td>
                                <td><span>$61</span></td>
                            </tr>
                        </table>
                    </td>
                </tr>
            </tbody>
        </table>

    </div>
    <hr />

</div>


