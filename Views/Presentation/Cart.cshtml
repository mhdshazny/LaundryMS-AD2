<script>
    function proceed(id) {
        var form = document.createElement('form');
        form.setAttribute('action', 'AddOneToCart')
        form.setAttribute('method', 'post')
        form.setAttribute('asp-route-id',id)
        document.body.appendChild(form)
        form.submit();
    }
</script>  